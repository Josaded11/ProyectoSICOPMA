<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cc.josaded.proyectosicopma.MenuActivity"
    android:background="#0B0B39">

    <TextView
        android:text="(Áreas, perímetros, radios,diametros y ángulos internos)."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_below="@+id/btnMenuFiguras"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />

    <TextView
        android:text="(Operaciones básicas, raíces cuadradas, potencias, porcentajes, derivadas, integrales, ecuaciones)."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:textSize="16sp"
        android:layout_below="@+id/btnMenuOperaciones"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />

    <TextView
        android:text="Bienvenido a:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:layout_alignTop="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="¿Qué desea realizar?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:id="@+id/textView7"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textAlignment="center"
        android:background="#101043"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="SICOPMA"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="21dp"
        android:id="@+id/textView2"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:textSize="40sp"
        android:background="#101043"
        android:elevation="0dp"
        android:paddingTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold" />

    <Button
        android:text="Cálculo de figuras geométricas"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/btnMenuFiguras"
        android:background="@android:color/holo_red_light"
        android:textSize="18sp"
        android:layout_marginTop="75dp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Cálculo de operaciones matemáticas"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="27dp"
        android:id="@+id/btnMenuOperaciones"
        android:background="@android:color/holo_red_light"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:onClick="operaciones"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true" />
</RelativeLayout>
