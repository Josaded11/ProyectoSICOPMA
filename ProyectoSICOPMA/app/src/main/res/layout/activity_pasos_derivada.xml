<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pasos_derivada"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cc.josaded.proyectosicopma.PasosDerivadaActivity"
    android:background="#0B0B39">

    <FrameLayout
        android:layout_marginTop="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:layout_width="325dp"
        android:layout_height="450dp"
        android:background="#101043"
        android:id="@+id/contenedorPasos">

        <TextView
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_height="60dp"
            android:id="@+id/tvHistorialPasos"
            android:layout_width="300dp"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="@android:color/background_light" />

        <TextView
            android:layout_marginStart="15dp"
            android:layout_marginTop="70dp"
            android:layout_height="60dp"
            android:id="@+id/tvHistorialPasos2"
            android:layout_width="300dp"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="@android:color/background_light" />

        <TextView
            android:layout_marginStart="15dp"
            android:layout_marginTop="130dp"
            android:layout_height="60dp"
            android:id="@+id/tvHistorialPasos3"
            android:layout_width="300dp"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:text="" />

        <TextView
            android:layout_marginStart="15dp"
            android:layout_marginTop="190dp"
            android:layout_height="60dp"
            android:id="@+id/tvHistorialPasos4"
            android:layout_width="300dp"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="@android:color/background_light" />

        <TextView
            android:layout_marginStart="15dp"
            android:layout_marginTop="250dp"
            android:id="@+id/tvHistorialPasos5"
            android:layout_width="300dp"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:layout_height="80dp" />

        <TextView
            android:layout_marginStart="15dp"
            android:layout_marginTop="330dp"
            android:layout_height="60dp"
            android:id="@+id/tvHistorialPasos6"
            android:layout_width="300dp"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="@android:color/background_light" />

        <TextView
            android:layout_marginTop="390dp"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:textSize="15sp"
            android:textAlignment="center"
            android:textColor="@android:color/holo_red_dark"
            android:id="@+id/tvNota"
            android:text="Si la incognita no tiene una constante o pontencia visible, su valor por defecto es 1." />

    </FrameLayout>

    <TextView
        android:text="Procedimiento:"
        android:id="@+id/textView"
        android:textSize="30sp"
        android:layout_height="40dp"
        android:textColor="@android:color/white"
        android:layout_width="230dp"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp" />

</RelativeLayout>
